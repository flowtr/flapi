{
  "$schema": "http://json-schema.org/schema",
  "additionalProperties": true,
  "properties": {
    "modules": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string"
          },
          "rules": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["type"],
              "properties": {
                "type": {
                  "type": "string",
                  "anyOf": [
                    {
                      "const": "get_all"
                    },
                    {
                      "const": "get"
                    },
                    {
                      "const": "create"
                    },
                    {
                      "const": "dellete"
                    },
                    {
                      "const": "update"
                    }
                  ]
                },
                "auth": {
                  "type": "object",
                  "required": ["roles"],
                  "additionalProperties": false,
                  "properties": {
                    "roles": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "model": {
            "type": "object",
            "required": ["fields"],
            "additionalProperties": false,
            "properties": {
              "fields": {
                "type": "array",
                "additionalProperties": true,
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["id", "type", "displayName"],
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "displayName": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string",
                      "anyOf": [
                        {
                          "const": "string"
                        }
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
